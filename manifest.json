{
  "manifest_version": 2,
  "name": "NoteFlix",
  "version": "1.0",
  "description": "Permet d'avoir les scores et avis AlloCin√©.fr sur Netflix",
  "icons": {
    "48": "images/logo-48.png",
    "64": "images/logo-64.png",
    "128": "images/logo-128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.netflix.com/*"],
      "js": ["index.js"]
    }
  ],
  "permissions": [
    "*://www.allocine.fr/*",
    "webRequest"
  ]
}
